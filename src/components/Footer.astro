<style>
  .footer {
    background: #1a202c;
    color: #e2e8f0;
    padding: 4rem 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-brand .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-weight: 700;
    font-size: 1.25rem;
    color: white;
  }

  .brand-description {
    color: #a0aec0;
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 300px;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #2d3748;
    border-radius: 0.5rem;
    color: #a0aec0;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: #007acc;
    color: white;
    transform: translateY(-2px);
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .link-group h4 {
    color: white;
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  .link-group ul {
    list-style: none;
    padding: 0;
  }

  .link-group li {
    margin-bottom: 0.75rem;
  }

  .link-group a {
    color: #a0aec0;
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .link-group a:hover {
    color: #007acc;
  }

  .footer-newsletter {
    background: #2d3748;
    padding: 2rem;
    border-radius: 1rem;
    margin-bottom: 3rem;
    text-align: center;
  }

  .footer-newsletter h4 {
    color: white;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .footer-newsletter p {
    color: #a0aec0;
    margin-bottom: 1.5rem;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .newsletter-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid #4a5568;
    border-radius: 0.5rem;
    background: #1a202c;
    color: white;
    font-size: 0.95rem;
  }

  .newsletter-form input::placeholder {
    color: #718096;
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: #007acc;
    box-shadow: 0 0 0 3px rgba(0, 122, 204, 0.1);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid #2d3748;
  }

  .copyright p {
    color: #718096;
    font-size: 0.9rem;
  }

  .footer-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: #718096;
    font-size: 0.9rem;
  }

  .footer-meta a {
    color: #a0aec0;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-meta a:hover {
    color: #007acc;
  }

  @media (max-width: 1024px) {
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 2rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem 1rem;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-meta {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>